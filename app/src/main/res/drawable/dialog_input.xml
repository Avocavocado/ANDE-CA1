<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/almostWhite" /> <!-- light blue color -->
            <corners android:radius="8dp" /> <!-- rounded corners with smaller radius -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" /> <!-- reduced padding -->
            <size
                android:width="56dp"
                android:height="56dp" /> <!-- smaller size -->
        </shape>
    </item>
</selector>
